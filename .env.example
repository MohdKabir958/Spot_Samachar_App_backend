# Database - SQLite for development
DATABASE_URL="file:./dev.db"

# For production (PostgreSQL on Render)
# DATABASE_URL="postgresql://user:password@host:5432/spot_samachar?schema=public"

# JWT Configuration
JWT_SECRET="your-secret-key-here"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV=development

# Upload Configuration
UPLOAD_DIR="./uploads"
MAX_VIDEO_DURATION=45
MAX_FILE_SIZE=52428800

# Rate Limiting
CITIZEN_DAILY_LIMIT=2
VERIFIED_REPORTER_DAILY_LIMIT=5

# Firebase Configuration
# Download your service account JSON from Firebase Console
# Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT_PATH="./firebase-service-account.json"

# Email Configuration
# Option 1: Resend (Recommended for production - https://resend.com)
RESEND_API_KEY="re_your_api_key_here"

# Option 2: Gmail (For local development only)
# See docs for how to generate Gmail App Password
EMAIL_USER="your-email@gmail.com"
EMAIL_APP_PASSWORD="your-16-character-app-password"

